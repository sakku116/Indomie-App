<ReadMoreBtn@Button>
    ############ REQUIRES ###########
    icon: ''
    text: ''
    #on_release: ''
    #################################

    color: (1,1,1,0)

    size_hint: None, None
    width: '215px'
    height: '40px'
    pos_hint: {'top':1}

    background_normal: ''
    background_color: (0,0,0,0)

    canvas.after:
        Color:
            rgba: (1,1,1,0)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        pos: root.parent.pos
        size: root.parent.size

        Image:
            # button image
            source: 'assets/float button.png'
            pos: self.parent.pos
            size: self.parent.size
            allow_stretch: True

        FloatLayout:
            size: self.parent.size
            pos: self.parent.pos

            Label:
                # text
                text: root.text
                font_size: '13px'
                font_name: 'assets/font/Poppins/Poppins-Medium.ttf'

                pos_hint: {'right':.95, 'center_y':.575}
                size: self.parent.size

            Image:
                source: root.icon
                size_hint: .2,.5
                pos_hint: {'right':.925, 'center_y':.57}

