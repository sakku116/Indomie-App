<ReadMoreBtn>
    id: main
    ############ REQUIRES ###########
    icon: ''
    text: ''
    on_press: root.animateOnPress(btn_image)
    on_release:
        root.animateOnRelease(btn_image)
        root.animateIcon(btn_icon)
    #################################

    color: (1,1,1,0)

    size_hint: None, None
    width: 247
    height: 67
    pos_hint: {'top':1, 'center_x':.5}

    background_normal: ''
    background_color: (0,0,0,0)

    FloatLayout:
        id: btn_image_layout
        pos: self.parent.pos
        size: self.parent.size
        pos_hint: {'center_x':.5, 'center_y':.5}

        Image:
            id: btn_image
            # button image
            source: 'assets/float button.png'
            pos: self.parent.pos
            pos_hint: {'center_x':.5, 'center_y':.5}
            size: self.parent.size
            size_hint: None, None
            width: self.parent.width
            height: self.parent.height
            allow_stretch: True

        FloatLayout:
            size: self.parent.size
            pos: self.parent.pos

            Label:
                # text
                id: btn_text
                text: root.text
                font_size: 13
                font_name: 'assets/font/Poppins/Poppins-Medium.ttf'

                pos_hint: {'right':.95, 'center_y':.575}
                size: self.parent.size

            Image:
                id: btn_icon
                source: root.icon
                size_hint: None, None
                my_size: 17
                width: self.my_size
                height: self.my_size

                pos_hint: {'right':.83, 'center_y':.57}

                allow_stretch:  True
