
<ContentScreen>
    FloatLayout:
        id: content_screen_base
        size: root.width, root.height

        BoxLayout:
            id: content_screen_layout
            orientation: 'vertical'

            size_hint: None, None
            width: self.parent.width
            height: self.parent.height
            pos_hint: {'right':self.my_direct}

            my_direct: 2
            opacity: 0

            canvas.before:
                Color:
                    rgba: (255/255, 224/255, 224/255, 1)
                Rectangle:
                    size: [self.width, self.height]
                    pos: [self.x, self.y]

            ScrollView:
                id: main_scroll_view
                enable_scroll: True
                do_scroll_y: self.enable_scroll
                do_scroll_x: False

                BoxLayout:
                    orientation: 'vertical'

                    size_hint: 1,None
                    height: self.minimum_height
                    pos_hint: {'top':1}

                    # PICT
                    BoxLayout:
                        size_hint_y: None
                        height: 260

                        Image:
                            id: content_pict

                            size_hint: .85,.85
                            allow_stretch: True

                            pos_hint: {'center_y':.425, 'center_x':.5}

                    # CONTENT
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [20,25,20,20]
                        spacing: 10

                        size_hint_y: None
                        height: 500

                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [0,0,25,25]

                        # HEADER
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 15
                            padding: [0,5,0,0]

                            size_hint_y: None
                            height: self.minimum_height

                            Label: # nama varian
                                id: title_text
                                text: ''

                                font_name: 'assets/font/Poppins/Poppins-Bold.ttf'
                                color: (0,0,0,.8)
                                font_size: 23
                                text_size: self.width, self.height
                                valign: 'bottom'
                                halign: 'left'

                                size_hint_y: None
                                height: 30

                            Label: # tipe varian
                                id: type_text
                                text: ''

                                font_name: 'assets/font/Roboto/Roboto-Bold.ttf'
                                color: (129/255, 0, 0, 1)
                                font_size: 16
                                text_size: self.width, self.height
                                valign: 'top'
                                halign: 'left'

                            BoxLayout:
                                id: rating
                                text: ''

                                orientation: 'horizontal'
                                spacing: 10

                                size_hint: None, None
                                width: self.minimum_width
                                height: 40

                                BoxLayout:
                                    id: rating_star
                                    orientation: 'horizontal'
                                    spacing: 8

                                    size_hint: None, None
                                    width: self.minimum_width
                                    height: self.minimum_height
                                    pos_hint: {'center_y':.5, 'right':1}

                                Label:
                                    id: rating_text
                                    text: self.parent.text

                                    color: (0,0,0,.6)
                                    font_size: 15
                                    font_name: 'assets/font/Roboto/Roboto-Medium.ttf'

                                    size: self.texture_size
                                    size_hint: None, None
                                    width: 21
                                    height: 21
                                    pos_hint: {'center_y':.5, 'right':1}

                        Label:
                            text: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.'
                            color: (0,0,0,1)
                            font_size: 16

                            text_size: self.size
                            size: self.text_size
                            halign: 'left'
                            valign: 'top'

        BoxLayout:
            id: screen_cover
            size: root.width, root.height
            opacity: 0
            canvas.before:
                Color:  
                    rgba: (0,0,0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

        StackLayout:
            id: share_screen
            orientation: 'lr-tb' # left to right, top to bottom
            padding: [25,20,25,60]
            spacing: 30

            size_hint_y: None
            height: self.minimum_height
            my_bottom: -.5
            pos_hint: {'y':self.my_bottom}

            radius: 15

            canvas.before:
                Color:
                    rgba: (255/255, 224/255, 224/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [self.radius, self.radius, 0, 0]

            ShareButton:
                source: 'assets/socmed/fb.png'
            ShareButton:
                source: 'assets/socmed/wa.png'
            ShareButton:
                source: 'assets/socmed/ig.png'

        # BACK_BUTTON
        FloatLayout:
            size_hint: 1, None
            height: 70
            pos_hint: {'top':1}

            Button:
                id: back_button
                pos: self.parent.pos
                size_hint: None, None
                width: 135
                height: 70
                pos_hint: {'center_y':.5}
                opacity: 0

                background_normal: ''
                background_color: (0,0,0,0)

                on_release: app.root.gotoMainScreen()

                BoxLayout:
                    pos: self.parent.pos
                    size: self.parent.size

                    Image:
                        source: 'assets/back_button.png'
                        pos: self.parent.pos
                        size: self.parent.size
                        allow_stretch: True
