<Manager>
    FloatLayout:
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            id: layout_for_main

        BoxLayout:
            id: layout_for_content

        BoxLayout:
            size_hint: None, None
            width: self.minimum_width
            height: 65
            pos_hint: {'center_x':.5, 'down':1}

            ReadMoreBtn:
                id: float_btn
                text: 'Lihat Selengkapnya'
                icon: 'assets/arrow.png'
